<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.add_post.ForumAddPostActivity"
    tools:showIn="@layout/activity_add_post">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/forum_add_post_title"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:hint="@string/forum_add_post_title"
            android:maxLines="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <EditText
            android:id="@+id/forum_add_post_content"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:gravity="start"
            android:hint="@string/forum_add_post_content"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/forum_add_post_select_tag_list"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/forum_add_post_select_image_list"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>