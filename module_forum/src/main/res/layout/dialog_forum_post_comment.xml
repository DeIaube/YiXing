<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/comment_content"
        android:gravity="start"
        android:padding="8dp"
        android:background="@drawable/forum_post_comment_content_bg"
        android:layout_width="0dp"
        android:hint="@string/forum_post_add_comment_tip"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/comment_submit"
        android:textSize="14dp"
        android:background="@drawable/forum_post_comment_submit_bg"
        android:textColor="@color/colorPrimary"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/forum_post_sub_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/comment_content"
        app:layout_constraintTop_toBottomOf="@+id/comment_content" />

</android.support.constraint.ConstraintLayout>
