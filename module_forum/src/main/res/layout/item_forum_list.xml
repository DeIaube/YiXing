<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/forum_list_author_portrait"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/default_portrait"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/forum_list_author_name"
            android:layout_marginStart="8dp"
            android:text="Android开发实践"
            android:textColor="#101010"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/forum_list_tag"
            android:text="Android"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/forum_list_title"
        android:layout_margin="8dp"
        android:text="精准计算RecyclerView的滑动距离"
        android:textSize="18dp"
        android:textColor="#101010"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/forum_list_content"
        android:layout_margin="8dp"
        android:text="精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,精准计算RecyclerView的滑动距离,"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        layout="@layout/item_forum_bottom"/>

    <View
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

</LinearLayout>
