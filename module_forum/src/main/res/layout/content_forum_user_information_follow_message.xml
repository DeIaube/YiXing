<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="关注"
            android:textSize="13dp"
            android:textColor="#101010"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/forum_user_information_follow_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="#101010"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:src="@drawable/forum_user_information_vertical_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="粉丝"
            android:textSize="13dp"
            android:textColor="#101010"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/forum_user_information_followed_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="#101010"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:src="@drawable/forum_user_information_vertical_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="帖子"
            android:textSize="13dp"
            android:textColor="#101010"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/forum_user_information_post_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="#101010"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>