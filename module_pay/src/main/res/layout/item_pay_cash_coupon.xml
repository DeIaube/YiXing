<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/op_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="8dp"
            android:text="￥"
            android:textColor="#444444"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/discount_number"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/discount_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="10"
            android:textColor="#444444"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/op_money"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cash_coupon_coupon_type"
            android:layout_width="44dp"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="7dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="现金券"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/cash_coupon_title"
            app:layout_constraintEnd_toStartOf="@+id/cash_coupon_title"
            app:layout_constraintTop_toTopOf="@+id/cash_coupon_title" />

        <TextView
            android:id="@+id/cash_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="纯露化妆水无门槛10元券"
            android:textColor="#444444"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cash_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="2018.04.11至2018.05.11"
            android:textColor="#999999"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cash_coupon_coupon_type"
            app:layout_constraintTop_toBottomOf="@+id/cash_coupon_coupon_type" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>
