<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cash_coupon_item_able_used_bg">

    <TextView
        android:id="@+id/op_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="8dp"
        android:text="￥"
        android:textColor="#444444"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/discount_number"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/discount_number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:text="10"
        android:textColor="#444444"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/op_money"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cash_coupon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无金额门槛"
        android:textColor="#444444"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/op_money"
        app:layout_constraintTop_toBottomOf="@+id/discount_number" />

    <TextView
        android:id="@+id/cash_coupon_add_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="12dp"
        android:text="仅限购买工厂店商品"
        android:textColor="#444444"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cash_coupon_type" />

    <TextView
        android:id="@+id/cash_coupon_coupon_type"
        android:layout_width="44dp"
        android:layout_height="15dp"
        android:layout_marginEnd="7dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="现金券"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cash_coupon_title"
        app:layout_constraintEnd_toStartOf="@+id/cash_coupon_title"
        app:layout_constraintTop_toTopOf="@+id/cash_coupon_title" />

    <TextView
        android:id="@+id/cash_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="22dp"
        android:text="纯露化妆水无门槛10元券"
        android:textColor="#444444"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/discount_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cash_coupon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2018.04.11至2018.05.11"
        android:textColor="#999999"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/cash_coupon_coupon_type"
        app:layout_constraintTop_toBottomOf="@+id/cash_coupon_title" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/cash_coupon_use"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="13dp"
        android:gravity="center"
        android:text="立即使用"
        android:background="@drawable/cash_coupon_use_btn_bg"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cash_coupon_title" />

    <ImageView
        android:src="@drawable/cash_coupon_item_down"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cash_coupon_type" />

</android.support.constraint.ConstraintLayout>
