<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="9dp"
            android:paddingRight="13dp"
            android:gravity="right"
            android:text="————————————————————————"
            android:maxLines="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/login_third_part"
            android:textSize="14dp"
            android:layout_height="23dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="9dp"
            android:paddingRight="13dp"
            android:text="————————————————————————"
            android:maxLines="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_third_part"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/login_wechat_btn"
            android:onClick="onViewClicked"
            android:src="@drawable/login_wechat"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/login_qq_btn"
            android:onClick="onViewClicked"
            android:src="@drawable/login_qq"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/login_weibo_btn"
            android:onClick="onViewClicked"
            android:src="@drawable/login_weibo"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>