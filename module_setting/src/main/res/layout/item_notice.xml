<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:src="@drawable/notice_default"
        android:id="@+id/notice_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notice_title"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:textSize="15dp"
        android:textColor="#101010"
        android:text="活动精选"
        app:layout_constraintStart_toEndOf="@+id/notice_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginEnd="12dp"
        android:textColor="#bec2c9"
        android:textSize="13dp"
        android:text="2018.04.08"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notice_title" />

    <TextView
        android:id="@+id/notice_content"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="1dp"
        android:maxLines="1"
        android:textColor="#101010"
        android:textSize="13dp"
        android:text="#妈妈不用做超人#考拉神助攻，独家揭秘辣妈"
        app:layout_constraintStart_toStartOf="@+id/notice_title"
        app:layout_constraintTop_toBottomOf="@+id/notice_title" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/notice_time"
        app:layout_constraintStart_toStartOf="@+id/notice_image" />

</android.support.constraint.ConstraintLayout>
